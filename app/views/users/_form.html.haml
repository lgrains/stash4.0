#container

  = f.input :email, :label => "Email", :input_html => { :size => 80 }, :error => false
  = f.input :password, :label => "Password", :input_html => { :size => 20, :validate => false }, :hint=> '(At least six characters)', :error => false, :required => false
  = f.input :password_confirmation, :label => "Confirm Password", :input_html => { :size => 20 }


  .form_submit
    = f.submit
    %span
      / = link_to 'Cancel',
